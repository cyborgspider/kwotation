@import 'nib'
@import 'layout'
@import url('http://fonts.googleapis.com/css?family=Croissant+One|Radley|Sofadi+One');
global-reset()

html
  height 100%
body
  height      100%
  color       #fff
  font-size   4em
  line-height 1.4em
  font-family sans-serif
  position relative

nav
  position      fixed
  z-index       100
  top           50px
  left          50%
  margin-left   -75px
  width         150px
  height        50px
  border-radius 8px
  background    rgba(255,255,255,0.4)
  a
    background  url(../img/nav-icons.png) no-repeat
    display     block
    text-indent -9999px
    float left
    margin 16px 15px 0
    &.home
      background-position 0 0
      width               17px
      height              19px
    &.love
      background-position -40px 0
      width               22px
      height              19px
    &.humor
      background-position -20px 0
      width               19px
      height              19px



section
  width    100%
  height   100%
  position relative
  display  table

  h1
    display        table-cell
    vertical-align middle
    padding        10%
    text-shadow    2px 2px 3px rgba(0,0,0,0.3)
#inspiration
  background  #c0d465
  font-family 'Radley'
  font-weight 500

#love
  background #d4656c
  font-family 'Croissant One'
  letter-spacing -.05em
#humor
  background #65d4cd
  font-family 'Sofadi One'